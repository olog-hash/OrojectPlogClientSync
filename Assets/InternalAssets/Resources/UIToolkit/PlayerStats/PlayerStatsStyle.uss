#indicator-container {
    width: 60px;
    height: 120px;
    position: relative;
    border-width: 1px;
    border-color: white;
}

#indicator-mask {
    width: 100%;
    height: 50%;
    position: absolute;
    bottom: 0;
    overflow: hidden;
}

#indicator-background {
    width: 100%;
    height: 200%;
    position: absolute;
    bottom: 0;
    -unity-background-scale-mode: scale-to-fit;
}

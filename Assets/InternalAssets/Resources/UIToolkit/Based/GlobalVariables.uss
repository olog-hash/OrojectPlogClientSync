:root {
    /* Пути к шрифтам */
    --font-fat: url('project://database/Assets/InternalAssets/Resources/GUI/fonts/Red October-Fat');
    --font-fat-custom:  url('project://database/Assets/InternalAssets/Resources/GUI/fonts/Red October-Fat-Custom');
    --font-light:  url('project://database/Assets/InternalAssets/Resources/GUI/fonts/Red October-Light');
    
    --font-regular:  url('project://database/Assets/InternalAssets/Resources/GUI/fonts/Red October-Regular');
    --font-stencil:  url('project://database/Assets/InternalAssets/Resources/GUI/fonts/Red October-Stencil');
    --font-kill:  url('project://database/Assets/InternalAssets/Resources/GUI/fonts/RedOctoberKill');
    
    --font-tahoma:  url('project://database/Assets/InternalAssets/Resources/GUI/fonts/tahoma');
    --font-tahomabd:  url('project://database/Assets/InternalAssets/Resources/GUI/fonts/tahomabd');

    /* Размеры шрифтов */
    --font-size-small: 12px;
    --font-size-normal: 14px;
    --font-size-large: 16px;
    --font-size-header: 20px;
    --font-size-title: 24px;

    /* При желании можно добавить и другие глобальные переменные */
    --color-text-primary: rgb(255, 255, 255);
    --color-text-secondary: rgba(255, 255, 255, 0.7);
}